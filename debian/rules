#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
#export DH_OPTIONS

ifeq (Horn-Lehe,$(shell lsb_release -cs))
override_dh_auto_install:
	dh_auto_install
	install -m 0644 conffiles/security/packetfilter.d/44opsi.sh  debian/opsi4ucs/etc/security/packetfilter.d/
endif
	
configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


#Architecture 
build: build-stamp

build-stamp: configure-stamp 
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	install -m 0644 files/univention.conf           debian/opsi4ucs/etc/opsi/backends/
	install -m 0644 files/dispatch.conf.univention  debian/opsi4ucs/etc/opsi/backendManager/
	install -m 0644 files/dispatch.conf.jsonrpc     debian/opsi4ucs/etc/opsi/backendManager/
	install -m 0644 files/configed.png              debian/opsi4ucs/var/www/icon/opsi/
	install -m 0755 99opsi4ucs.inst                 debian/opsi4ucs/usr/lib/univention-install/
	install -m 0755 opsi-setup                      debian/opsi4ucs/usr/bin/opsi-setup
	install -m 0644 files/opsi.schema               debian/opsi4ucs-ldap-schema/usr/share/univention-ldap/schema/
	
	#cp -r conffiles/ldap debian/opsi4ucs-ldap-schema/etc/univention/templates/files/etc
	install -m 0644 conffiles/ldap/slapd.conf.d/11opsi-schema  debian/opsi4ucs-ldap-schema/etc/univention/templates/files/etc/ldap/slapd.conf.d/
	install -m 0644 conffiles/ldap/slapd.conf.d/60opsi-acls  debian/opsi4ucs-ldap-schema/etc/univention/templates/files/etc/ldap/slapd.conf.d/

	install -m 0644 debian/opsi4ucs-ldap-schema.univention-baseconfig debian/opsi4ucs-ldap-schema/etc/univention/templates/info/opsi4ucs-ldap-schema.info
	
	cp -r conffiles/var debian/opsi4ucs/etc/univention/templates/files/
	install -m 0644 debian/opsi4ucs.univention-baseconfig debian/opsi4ucs/etc/univention/templates/info/opsi4ucs.info
	
	#install -m 0755 opsi_reinstall_listener.py     debian/opsi4ucs/usr/lib/univention-directory-listener/system/
	
	find debian/opsi4ucs -iname ".svn" -exec rm -r {} \; || true
	find debian/opsi4ucs-ldap-schema -iname ".svn" -exec rm -r {} \; || true
	
	dh_install

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installdebconf
	dh_installchangelogs -i
	dh_shlibdeps
	dh_md5sums
	dh_gencontrol
	dh_installdeb
	dh_builddeb

binary-arch: build install

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install configure
